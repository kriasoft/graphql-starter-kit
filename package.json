{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.0.0-rc.44",
  "workspaces": [
    "api",
    "app",
    "db",
    "edge",
    "img",
    "scripts"
  ],
  "scripts": {
    "postinstall": "node ./scripts/postinstall.js",
    "start": "yarn workspaces foreach -ip -j unlimited run start",
    "build": "yarn workspaces foreach -p -j unlimited run build",
    "setup": "node ./scripts/setup.js",
    "lint": "eslint --cache --report-unused-disable-directives .",
    "test": "vitest",
    "tf": "node --no-warnings ./scripts/tf.js",
    "g:lint": "yarn lint \"$INIT_CWD\"",
    "psql": "yarn db:psql",
    "repl": "yarn db:repl"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.11.0",
    "@emotion/eslint-plugin": "^11.11.0",
    "@emotion/react": "^11.11.0",
    "@types/node": "^18.16.16",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "envars": "^0.4.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "graphql-config": "^5.0.1",
    "happy-dom": "^9.20.3",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "relay-config": "^12.0.1",
    "typescript": "^5.0.4",
    "vitest": "^0.31.1",
    "wrangler": "^3.0.1",
    "zx": "^7.2.2"
  },
  "envars": {
    "cwd": "./env"
  },
  "graphql": {
    "projects": {
      "api": {
        "schema": "api/schema.graphql",
        "documents": "api/**/*.ts",
        "extensions": {
          "endpoints": {
            "default": "http://localhost:8080/api"
          }
        }
      },
      "web": {
        "schema": [
          "api/schema.graphql",
          "api/schema.relay.graphql",
          "web/schema.graphql"
        ],
        "documents": "web/**/*.{ts,tsx}",
        "extensions": {
          "endpoints": {
            "default": "http://localhost:5173/api"
          }
        }
      }
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
